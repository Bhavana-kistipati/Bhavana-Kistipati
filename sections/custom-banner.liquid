<style>
  .custom-banner-wrapper {
    font-family: 'Helvetica Neue', sans-serif;
    color: #000;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .banner-half {
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    height: 50vh;
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .top-half {
    background-image: url('{{ section.settings.top_half_image | image_url: width: 1500 }}');
  }

  .bottom-half {
    background-image: url('{{ section.settings.bottom_half_image | image_url: width: 1500 }}');
  }

  .custom-banner-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 30px;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.85);
  }

  .custom-banner-top .brand {
    font-weight: bold;
    font-size: 18px;
  }

  .custom-banner-top .center-text {
    font-size: 14px;
    text-align: center;
    flex: 1;
  }

  .custom-banner-top .gift-button {
    background: #fdd835;
    padding: 10px 20px;
    font-weight: bold;
    text-decoration: none;
    color: #000;
    white-space: nowrap;
    transition: all 0.3s ease;
  }

  .custom-banner-top .gift-button:hover {
    background-color: #ffeb3b;
    transform: scale(1.05);
  }

  .custom-banner-main {
    padding: 60px 30px;
    text-align: left;
    background: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }

  .custom-banner-main h2 {
    font-size: 40px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .custom-banner-main .subheading {
    font-size: 14px;
    max-width: 500px;
  }

  .custom-banner-main .shop-button {
    background: black;
    color: white;
    padding: 12px 24px !important;
    display: inline-block !important;
    margin-top: 20px;
    text-decoration: none;
    border-radius: 4px;
    font-weight: bold;
    font-size: 16px;
    width: auto !important;
    white-space: nowrap;
    max-width: max-content;
  }

  .custom-banner-main .shop-button:hover {
    background: #333;
    transform: scale(1.05);
  }

  .custom-banner-footer {
    text-align: center;
    font-size: 12px;
    color: #444;
    font-weight: 500;
    letter-spacing: 0.5px;
    padding: 20px;
    background-color: rgba(255, 255, 255, 0.85);
    width: 100%;
  }
</style>

<div class="custom-banner-wrapper">

  <!-- Top Background with Content -->
  <div class="banner-half top-half">
    <div class="custom-banner-top">
      <div class="brand">{{ section.settings.brand_name }}</div>
      <div class="center-text">{{ section.settings.center_text }}</div>
      <a href="{{ section.settings.choose_gift_link }}" class="gift-button">{{ section.settings.choose_gift_label }}</a>
    </div>
  </div>

  <!-- Main Content Section -->
  <div class="custom-banner-main">
    <h2>{{ section.settings.main_heading }}</h2>
    <div class="subheading">{{ section.settings.subheading }}</div>
    <a href="{{ section.settings.shop_now_link }}" class="shop-button">{{ section.settings.shop_now_label }}</a>
  </div>

  <!-- Bottom Background with Footer Text -->
  <div class="banner-half bottom-half">
    <div class="custom-banner-footer">
      {{ section.settings.bottom_note }}
    </div>
  </div>

</div>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "top_half_image",
      "label": "Top Half Background Image"
    },
    {
      "type": "image_picker",
      "id": "bottom_half_image",
      "label": "Bottom Half Background Image"
    },
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "center_text",
      "label": "Top Center Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "choose_gift_label",
      "label": "Choose Gift Button Label",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "choose_gift_link",
      "label": "Choose Gift Button Link"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "shop_now_label",
      "label": "Shop Now Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "shop_now_link",
      "label": "Shop Now Button Link"
    },
    {
      "type": "text",
      "id": "bottom_note",
      "label": "Bottom Note",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Split Banner"
    }
  ]
}
{% endschema %}
