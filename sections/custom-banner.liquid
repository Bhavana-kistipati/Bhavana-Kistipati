<style>
  .custom-banner-wrapper {
    font-family:'Helvetica Neue', sans-serif;
    color: #000;
  }

  .custom-banner-top {
  padding: 20px 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: transparent;
}

  .custom-banner-top .brand {
    font-weight: bold;
    font-size: 18px;
  }

  .custom-banner-top .center-text {
    font-size: 14px;
    text-align: center;
    flex: 1;
  }

  .custom-banner-top .gift-button {
    background: #fdd835;
    padding: 10px 20px;
    font-weight: bold;
    text-decoration: none;
    color: #000;
    white-space: nowrap;
  }

  .custom-banner-main {
  padding: 60px 30px;
  text-align: left;
  background-color: transparent;
}

  .custom-banner-main h2 {
    font-size: 40px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .custom-banner-main .subheading {
    font-size: 14px;
    max-width: 500px;
  }

  .custom-banner-main .shop-button {
    background: #000;
    color: #fff;
    padding: 12px 24px;
    display: inline-block;
    margin-top: 20px;
    font-size: 14px;
    text-decoration: none;
  }

  .custom-banner-main .bottom-note {
  font-size: 10px;
  margin-top: 30px;
  color: #333;
  text-align: center;
}

  .custom-banner-wrapper {
  position: relative;
  font-family: 'Helvetica Neue', sans-serif;
  color: #000;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 600px;
  padding: 30px 20px;
  z-index: 0;
  overflow: hidden;
}

.custom-banner-wrapper::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: 
    linear-gradient(to bottom, rgba(255,255,255,0) 50%, rgba(255,255,255,0) 50%), 
    url('{{ section.settings.top_half_image | image_url: width: 1500 }}') top center / 100% 50% no-repeat,
    url('{{ section.settings.bottom_half_image | image_url: width: 1500 }}') bottom center / 100% 50% no-repeat;
  background-repeat: no-repeat;
  background-size: 100% 50%, 100% 50%, 100% 50%;
  background-position: top, top, bottom;
  z-index: -1;
}


.custom-banner-wrapper > * {
  position: relative;
  z-index: 1;
}

.custom-banner-footer {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 12px;
  color: #444;
  font-weight: 500;
  letter-spacing: 0.5px;
  margin-top: 30px;
}
.custom-banner {
  position: relative;
  overflow: hidden;
}
</style>

<div class="custom-banner-wrapper">
  <!-- Top Bar -->
  <div class="custom-banner-top">
    <div class="brand">{{ section.settings.brand_name }}</div>
    <div class="center-text">{{ section.settings.center_text }}</div>
    <a href="{{ section.settings.choose_gift_link }}" class="gift-button">{{ section.settings.choose_gift_label }}</a>
  </div>

  <!-- Main Banner Content -->
  <div class="custom-banner-main">
  <h2>{{ section.settings.main_heading }}</h2>
  <div class="subheading">{{ section.settings.subheading }}</div>
  <a href="{{ section.settings.shop_now_link }}" class="shop-button">{{ section.settings.shop_now_label }}</a>
</div>

<div class="custom-banner-footer">
  {{ section.settings.bottom_note }}
</div>


{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
  "type": "image_picker",
  "id": "top_half_image",
  "label": "Top Half Background Image"
},
{
  "type": "image_picker",
  "id": "bottom_half_image",
  "label": "Bottom Half Background Image"
},   {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "center_text",
      "label": "Top Center Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "choose_gift_label",
      "label": "Choose Gift Button Label",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "choose_gift_link",
      "label": "Choose Gift Button Link"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "shop_now_label",
      "label": "Shop Now Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "shop_now_link",
      "label": "Shop Now Button Link"
    },
    {
      "type": "text",
      "id": "bottom_note",
      "label": "Bottom Note",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Split Banner"
    }
  ]
}
{% endschema %}
